{
  "source": ["input/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "output/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "output/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    },    
    "android": {
      "transformGroup": "android",
      "buildPath": "output/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "android/variables"
      }]
    }
}
}
